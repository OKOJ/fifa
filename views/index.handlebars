<div class="container">
    <div class="row">
       
        <div class="col-xs-12 text-center">
            <hi>Pick Your Players</hi>
        </div>
        <div class="col-xs-12 text-center">
            <div class="row">
                {{#each player_data}}
                {{#unless this.pick}}
                <div class="col-xs-9 text-center">
                    <pre>{{this.id}}. {{this.player_name}}</pre>
                </div>
                <div class="col-xs-12 text-center">
                    <form method="POST" action="/players/update?_method=PUT" class="button-size">
                    <input type="hidden" name="player_id" value={{this.id}}>
                    
                    <button type="submit" class="btn btn-default">Pick</button>
                    </form>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
        <div class="col-xs-6  text-center">
            {{#each player_data}}
                {{#if this.pick}}
                <input class="form-control" type="text" placeholder="{{this.id}}. {{this.player_name}}" readonly>
                {{/if}}
                {{/each}}
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center">
            <form action="/players/create" method="POST">
            <input type="text" name="player_name" class="form-control"
            value="" id="enter_text">
            <button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>
            </form>
            <p>Enter Player Name You would like to pick for Your Team</p>
        </div>
    </div>
</div>